<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addExerciseToWorkoutRoutineId"
    android:layout_width="320dp"
    android:layout_height="0dp"
    android:background="@color/primary_green"
    android:orientation="vertical"
    tools:context=".WorkoutAndExercise.Exercise.AddExerciseToWorkoutRoutineCustomDialog2">

    <TextView
        android:id="@+id/add_exercise_to_workout_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="11dp"
        android:textSize="25sp"
        android:textColor="@color/primary_white"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/primary_green">

        <RadioGroup
            android:id="@+id/workout_routine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:layout_gravity="center_horizontal">

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/primary_green">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="@string/cancel"
            android:textColor="@color/primary_white"
            android:background="@color/primary"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/add_button"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="@string/add"
            android:textColor="@color/primary_white"
            android:background="@color/primary"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>

</LinearLayout>