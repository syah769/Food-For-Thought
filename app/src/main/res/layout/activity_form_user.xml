<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_makanan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.mobilemocap.ahmadriza.apik.FormUser"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:text="@string/analisa_tubuh"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txtHead"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffff"
                android:layout_marginEnd="2dp"
                android:src="@drawable/height"
                />
            <EditText
                android:id="@+id/txtHeight"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:background="#ffff"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:hint="@string/tinggi_badan"
                android:textColorHint="@color/hint"
                android:inputType="number"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#ffff"
                android:text="@string/cm"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffff"
                android:padding="2dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/weight_icn"
                android:scaleType="centerCrop"
                />
            <EditText
                android:id="@+id/txtWeight"
                android:paddingStart="6dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:background="#ffff"
                android:hint="@string/berat_badan"
                android:textColorHint="@color/hint"
                android:inputType="number"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#ffff"
                android:text="@string/kg"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffff"
                android:layout_marginEnd="2dp"
                android:src="@drawable/age"
                android:padding="2dp"
                />
            <EditText
                android:id="@+id/txtAge"
                android:paddingStart="6dp"
                android:paddingEnd="0dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:background="#ffff"
                android:hint="@string/umur"
                android:textColorHint="@color/hint"
                android:inputType="number"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#ffff"
                android:text="@string/tahun"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/gender"
                android:textColor="@color/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/imgL"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/male"
                    android:padding="3dp"
                    android:clickable="true" />
                <CheckBox
                    android:id="@+id/chkL"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:clickable="false"
                    android:checked="true"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/imgP"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/female"
                    android:clickable="true" />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/chkP"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:checked="true"
                    android:visibility="invisible"
                    />
            </RelativeLayout>


        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/aktivitas"
                android:textColor="@color/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/imgRingan"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/low_icn"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/chkRingan"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"

                    android:visibility="invisible"
                    android:checked="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/ringan"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/imgSedang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/medium"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:clickable="true" />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/chkSedang"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"

                    android:visibility="invisible"
                    android:checked="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/sedang"
                    android:paddingBottom="5dp"
                    android:textColor="@color/warning"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/imgBerat"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/high"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:clickable="true" />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/chkBerat"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:visibility="invisible"
                    android:checked="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/beratt"
                    android:paddingBottom="5dp"
                    android:textColor="@color/danger"
                    android:gravity="center"
                    />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLanjut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@drawable/button"
        android:text="@string/lanjut"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        />

</RelativeLayout>